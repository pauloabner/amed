<section class="content-header">
<h1>
  Calendário
  <small>Visualize todos os seus agendamentos</small>
</h1>
<ol class="breadcrumb">
  <li><a href="/"><i class="fa fa-dashboard"></i> Início</a></li>
  <li class="active">Calendário</li>
</ol>
</section>

<section class="content container-fluid">
    <div class="row">
        <div class="box box-primary">
            <div class="box-body no-padding">
            <!-- THE CALENDAR -->
                <div id="calendar"></div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</section>

<script>
$(document).ready(function() {
    $('#calendar').fullCalendar({
        header: {
            left:   '',
            center: 'title',
            right:  'agendaDay, agendaWeek'
        },
        defaultView: 'agendaWeek',
        weekends: false,
        columnFormat: 'ddd - D/M',
        allDaySlot: false,
        timeFormat: 'h:mm',
        minTime: '08:00:00',
        maxTime: '18:00:00',
        height: 'auto',
        locale: 'pt-br',
        titleFormat: 'D/M/YYYY'
    })
});
</script>